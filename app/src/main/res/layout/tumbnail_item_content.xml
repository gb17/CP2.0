<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="213dp"
    android:layout_height="200dp"
    android:background="@drawable/recycler_row">


    <ImageView
        android:id="@+id/bandimage"
        android:layout_width="216dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/newcfix1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bandimage"
        android:layout_toLeftOf="@+id/refcount"
        android:background="@drawable/recycler_row"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="Fade pillfgfgfdgsdgsdgsdgsdgsdg"
        android:textColor="@color/thumbnail_productname_title"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ref"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/refcount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_circle"
        android:padding="8dp"
        android:src="@drawable/page_icon" />

    <TextView
        android:id="@+id/refcount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="13"
        android:textColor="@color/page_count"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/page"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/refcount"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/ref"
        android:background="@drawable/bg_circle"
        android:padding="8dp"

        android:src="@drawable/attach" />

    <TextView
        android:id="@+id/pagecount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/refcount"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="9"
        android:textColor="@color/page_count"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/reflayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/title"
        android:layout_toLeftOf="@+id/pagelayout">


    </RelativeLayout>

    <TextView
        android:id="@+id/newtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="#3e783d"
        android:padding="4dp"
        android:text="NEW"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/childScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF000000"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/layoutsc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/masklay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8C000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_roundeddown"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/icon_download"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:padding="10dp"
                android:text="RETRY"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:gravity="right"
        android:text="@string/cross"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/greendropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:scaleType="fitXY"
        android:src="@drawable/greendropdown"
        android:visibility="gone" />

</RelativeLayout>